@model IEnumerable<CanteenManagemenWebApp.Models.OrderDTO>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2> 

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsConfirmed)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsConfirmed)
        </td>
        <td>
            @Html.ActionLink("View", "EditEmployee", new { id=item.OrderId }) 
        </td>
        <td>
            @Html.ActionLink("Block User", "BlockUser", new { id=item.User.UserId }) 
        </td>
    </tr>
}

</table>
